pipeline {
    agent any
    parameters {
        string defaultValue: '', description: 'Nombre del usuario a crear', name: 'USUARIO', trim: true
        string defaultValue: '', description: 'contrase√±a nueva del usuario a crear', name: 'PASSWORD', trim: true
    }
    stages {
        stage ('checkov disable skip') {
            steps {
                script {
                           sh  "./desplieguejenkins/checkovDisableInlineSkips -nombre=./desplieguejenkins/"
                }
                
            }
            
        }
        stage ('checkov') {
            steps {
                        script {
                           sh  "checkov -d ./desplieguejenkins/"
                    }
                
            }
            
        }
                stage ('Deploy') {
            steps {
                        script {
                           sh  "echo 'deploy'"
                    }
                
            }
            
        }
    }
}