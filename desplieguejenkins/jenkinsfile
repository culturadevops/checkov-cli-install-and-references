pipeline {
    agent any
//./desplieguejenkins/checkovDisableInlineSkips -dir=./desplieguejenkins/
    stages {
        stage ('checkov disable skip') {
            steps {
                script {
                           sh  "./desplieguejenkins/checkovDisableInlineSkips -dir=./desplieguejenkins/"
                }
                
            }
            
        }
        stage ('checkov') {
            steps {
                        script {
                           sh  "checkov -d ./desplieguejenkins/"
                    }
                
            }
            
        }
                stage ('Deploy') {
            steps {
                        script {
                           sh  "echo 'deploy'"
                    }
                
            }
            
        }
    }
}